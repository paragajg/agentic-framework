# Auto detect text files and perform LF normalization
* text=auto

# Python files
*.py text eol=lf

# Shell scripts
*.sh text eol=lf

# YAML files
*.yaml text eol=lf
*.yml text eol=lf

# Markdown
*.md text eol=lf

# JSON
*.json text eol=lf

# Environment files
.env* text eol=lf

# Docker files
Dockerfile text eol=lf
docker-compose*.yml text eol=lf

# Config files
*.toml text eol=lf
*.cfg text eol=lf
*.ini text eol=lf

# Documentation
*.rst text eol=lf
*.txt text eol=lf

# Binary files
*.png binary
*.jpg binary
*.jpeg binary
*.gif binary
*.ico binary
*.pdf binary
*.zip binary
*.tar binary
*.gz binary
*.db binary
*.sqlite binary

# Export ignore (files not included in git archive)
.gitignore export-ignore
.gitattributes export-ignore
.github export-ignore
tests export-ignore
*.pyc export-ignore
__pycache__ export-ignore
