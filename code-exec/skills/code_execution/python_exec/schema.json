{
  "input": {
    "$schema": "http://json-schema.org/draft-07/schema#",
    "type": "object",
    "properties": {
      "code": {
        "type": "string",
        "description": "Python code to execute",
        "minLength": 1
      },
      "timeout_seconds": {
        "type": "integer",
        "description": "Timeout in seconds (max 300 = 5 minutes)",
        "minimum": 1,
        "maximum": 300,
        "default": 30
      }
    },
    "required": ["code"],
    "additionalProperties": false
  },
  "output": {
    "$schema": "http://json-schema.org/draft-07/schema#",
    "type": "object",
    "properties": {
      "output": {
        "type": "string",
        "description": "Standard output from execution"
      },
      "error": {
        "type": "string",
        "description": "Error message if execution failed"
      },
      "return_value": {
        "description": "Return value from the last expression (if any)"
      },
      "execution_time_ms": {
        "type": "number",
        "description": "Execution time in milliseconds"
      },
      "success": {
        "type": "boolean",
        "description": "Whether execution succeeded"
      }
    },
    "required": ["success"],
    "additionalProperties": false
  }
}
