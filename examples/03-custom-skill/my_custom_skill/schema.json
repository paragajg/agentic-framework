{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "definitions": {
    "input": {
      "type": "object",
      "properties": {
        "text": {
          "type": "string",
          "description": "Text to analyze for sentiment",
          "minLength": 1
        }
      },
      "required": ["text"]
    },
    "output": {
      "type": "object",
      "properties": {
        "sentiment": {
          "type": "string",
          "enum": ["positive", "negative", "neutral"],
          "description": "Overall sentiment classification"
        },
        "polarity": {
          "type": "number",
          "minimum": -1.0,
          "maximum": 1.0,
          "description": "Sentiment polarity score (-1 to 1)"
        },
        "confidence": {
          "type": "number",
          "minimum": 0.0,
          "maximum": 1.0,
          "description": "Confidence score of the analysis"
        },
        "word_count": {
          "type": "integer",
          "minimum": 0,
          "description": "Number of words analyzed"
        }
      },
      "required": ["sentiment", "polarity", "confidence", "word_count"]
    }
  }
}
