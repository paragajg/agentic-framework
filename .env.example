# =============================================================================
# Agentic Framework Environment Configuration
# =============================================================================
# Copy this file to .env and fill in your values:
#   cp .env.example .env
#
# The kautilya CLI will automatically load these settings.
# =============================================================================

# =============================================================================
# LLM Provider Configuration (Choose ONE provider)
# =============================================================================

# OpenAI (Recommended for getting started)
OPENAI_API_KEY=sk-your-openai-api-key-here
OPENAI_MODEL=gpt-4o-mini

# Anthropic Claude
# ANTHROPIC_API_KEY=sk-ant-your-anthropic-api-key-here

# Azure OpenAI
# AZURE_OPENAI_KEY=your-azure-key
# AZURE_OPENAI_ENDPOINT=https://your-resource.openai.azure.com/

# Google Gemini
# GEMINI_API_KEY=your-gemini-api-key

# =============================================================================
# Kautilya CLI Configuration
# =============================================================================

# Maximum iterations for agentic loop (default: 5)
KAUTILYA_MAX_ITERATIONS=10

# Show iteration details during execution (true/false)
KAUTILYA_SHOW_ITERATION_DETAILS=true

# Enable thinking animation during LLM calls (true/false)
KAUTILYA_SHOW_THINKING_ANIMATION=true

# Verbose mode for debugging (true/false)
KAUTILYA_VERBOSE_MODE=false

# Custom system prompt file path (optional)
KAUTILYA_CUSTOM_SYSTEM_PROMPT_PATH=

# Maximum tokens for LLM responses
KAUTILYA_MAX_TOKENS=16000

# Maximum continuation attempts for long responses
KAUTILYA_MAX_CONTINUATIONS=5

# Web search provider: duckduckgo (free) or tavily (requires API key)
KAUTILYA_WEBSEARCH_PROVIDER=duckduckgo

# Tavily API key (only required if using tavily as web search provider)
# Get your key from https://tavily.com
# TAVILY_API_KEY=tvly-your-api-key-here

# Enable/disable animations (true/false)
KAUTILYA_ANIMATIONS=true

# Display mode: minimal or detailed
KAUTILYA_DISPLAY_MODE=detailed

# Output mode: concise or verbose
KAUTILYA_OUTPUT_MODE=verbose

# Auto-install missing Python packages during code execution (true/false)
KAUTILYA_AUTO_INSTALL_PACKAGES=true

# Show query statistics after each response (true/false)
KAUTILYA_SHOW_QUERY_STATS=true

# Generate dynamic follow-up questions using LLM (true/false)
# When true, uses an additional LLM call to generate contextual follow-ups
# When false, uses rule-based static follow-up generation
KAUTILYA_DYNAMIC_FOLLOWUPS=true

# =============================================================================
# Deep Research Skill Configuration
# =============================================================================

# Minimum number of sources to cite in research reports (default: 10)
DEEP_RESEARCH_MIN_SOURCES=10

# Maximum number of sources to include (default: 15)
DEEP_RESEARCH_MAX_SOURCES=15

# Number of search results to fetch per query (default: 20)
DEEP_RESEARCH_SEARCH_RESULTS=20

# =============================================================================
# Database Configuration
# =============================================================================

POSTGRES_URL=postgresql://user:password@localhost:5432/agentic_framework
REDIS_URL=redis://localhost:6379/0

# =============================================================================
# Vector Database
# =============================================================================

MILVUS_URL=http://localhost:19530
CHROMA_PATH=./data/chroma

# =============================================================================
# Object Storage (S3/MinIO)
# =============================================================================

MINIO_ENDPOINT=localhost:9000
MINIO_ACCESS_KEY=minioadmin
MINIO_SECRET_KEY=minioadmin
MINIO_BUCKET=agent-artifacts

# =============================================================================
# Service Configuration
# =============================================================================

ORCHESTRATOR_HOST=0.0.0.0
ORCHESTRATOR_PORT=8000
MCP_GATEWAY_URL=http://localhost:8080

# =============================================================================
# Security
# =============================================================================

JWT_SECRET_KEY=your-secret-key-here-change-in-production
JWT_ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=60
EPHEMERAL_TOKEN_TTL_MINUTES=15

# =============================================================================
# Observability
# =============================================================================

OTEL_EXPORTER_OTLP_ENDPOINT=http://localhost:4317
PROMETHEUS_PORT=9090

# =============================================================================
# Memory Configuration
# =============================================================================

MEMORY_SESSION_TTL_HOURS=72
MEMORY_RETENTION_YEARS=2
MEMORY_COMPACTION_THRESHOLD_TOKENS=8000
